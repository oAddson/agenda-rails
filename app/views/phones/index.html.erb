<p id="notice"><%= notice %></p>

<h1>Phones</h1>

<table>
  <thead>
    <tr>
      <th>Phonenumber</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @phones.each do |phone| %>
      <tr>
        <td><%= phone.phoneNumber %></td>
        <td><%= phone.category %></td>        
        <td><%= link_to 'Show', contact_phone_path(@contact, phone) %></td>
        <td><%= link_to 'Edit', edit_contact_phone_path(@contact, phone) %> </td>
        <td><%= link_to 'Destroy', contact_phone_path(@contact, phone), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

